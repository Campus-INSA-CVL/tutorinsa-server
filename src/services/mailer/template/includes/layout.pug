<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap", rel="stylesheet")
  body(style="margin: 0;padding: 0")
    table(border="0", cellpadding="0", width="600px", align="center", style="border-collapse: collapse; font-family: 'Roboto', sans-serif")
      tr
        td(bgcolor="#3359ca")
          include ./header.pug

      tr
        td(bgcolor="#ffffff", style="padding: 20px")
          block content

      tr
        td(bgcolor="#3359ca")
          include ./footer.pug

